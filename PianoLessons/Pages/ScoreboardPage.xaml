<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PianoLessons.Pages.ScoreboardPage"
    Title="Scoreboard">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="NavigatedTo"
            Command="{Binding GetTeacherCoursesCommand}" />
    </ContentPage.Behaviors>

    <ScrollView
        WidthRequest="500">
        <VerticalStackLayout>
            <Label
                Text="Practice High Scores:"
                FontSize="Title"
                HorizontalOptions="Center" />
            <Grid
                HorizontalOptions="Center"
                ColumnDefinitions="Auto,150,Auto,150">
                <Label
                    VerticalOptions="Center"
                    Padding="5,0"
                    Text="Course:" />
                <Picker
                    ItemsSource="{Binding CourseNames}"
                    Grid.Column="1"
                    SelectedItem="{Binding SelectedCourseName}">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior
                            EventName="SelectedIndexChanged"
                            Command="{Binding GetScoresCommand}" />
                    </Picker.Behaviors>
                </Picker>
                <Label
                    Padding="10,0,5,0"
                    VerticalOptions="Center"
                    Grid.Column="2"
                    Text="Last:" />
                <Picker
                    ItemsSource="{Binding Time}"
                    Grid.Column="3"
                    SelectedItem="{Binding SelectedTime}">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior
                            EventName="SelectedIndexChanged"
                            Command="{Binding GetScoresCommand}" />
                    </Picker.Behaviors>
                </Picker>
            </Grid>
            <CollectionView
                HorizontalOptions="Center"
                ItemsSource="{Binding StudentScores}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            HeightRequest="35"
                            BackgroundColor="LightGreen"
                            WidthRequest="250"
                            Padding="5,0,0,0"
                            StrokeShape="RoundRectangle 10,0,0,10">
                            <Grid
                                ColumnDefinitions="*,*">
                                <Label
                                    VerticalOptions="Center"
                                    LineBreakMode="TailTruncation"
                                    HorizontalOptions="Center"
                                    Text="{Binding Name}" />
                                <Label
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Text="{Binding Score, TargetNullValue=0}"
                                    Grid.Column="1" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>