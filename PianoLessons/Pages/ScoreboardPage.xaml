<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PianoLessons.Pages.ScoreboardPage"
    Title="Scoreboard">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            Command="{Binding GetScoresCommand}" />
    </ContentPage.Behaviors>
    <ScrollView
        WidthRequest="500">
        <VerticalStackLayout>
            <Label
                Text="Practice High Scores:"
                FontSize="Title"
                HorizontalOptions="Center" />
            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="5">
                <Label
                    VerticalOptions="Center"
                    Text="Last: " />
                <Picker
                    ItemsSource="{Binding Time}"
                    WidthRequest="150"
                    SelectedItem="{Binding SelectedTime}">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior
                            EventName="SelectedIndexChanged"
                            Command="{Binding GetScoresCommand}" />
                    </Picker.Behaviors>
                </Picker>
            </HorizontalStackLayout>
            <CollectionView
                HorizontalOptions="Center"
                ItemsSource="{Binding Students}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            HeightRequest="35"
                            BackgroundColor="LightGreen"
                            WidthRequest="250"
                            Padding="5,0,0,0"
                            StrokeShape="RoundRectangle 10,0,0,10">
                            <Grid
                                ColumnDefinitions="*,*">
                                <Label
                                    VerticalOptions="Center"
                                    LineBreakMode="TailTruncation"
                                    HorizontalOptions="Center"
                                    Text="{Binding Name}" />
                                <Label
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Text="{Binding Score, TargetNullValue=0}"
                                    Grid.Column="1" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>